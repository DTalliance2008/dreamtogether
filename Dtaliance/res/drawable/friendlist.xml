<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <!--头像一 -->   
 <TextView 
    android:id="@+id/tv_friendlist_myicon"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:background="@drawable/dream_myicon"
        />
     <TextView 
    android:id="@+id/tv_friendlist_name"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="5dp"
    android:textSize="18sp"
    android:layout_toRightOf="@+id/tv_friendlist_myicon"
    android:text="天天爱睡觉"
        />
<TextView 
    android:id="@+id/tv_friendlist_dream"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:layout_marginLeft="20dp"
    android:gravity="center"
    android:textSize="16sp"
    android:textColor="#ff9900"
    android:layout_toRightOf="@+id/tv_friendlist_myicon"
    android:layout_below="@+id/tv_friendlist_name" 
    android:text="我的梦想：我想成为一名歌唱家"
        />

  <!--横线一 -->   
    <TextView 
    		android:id="@+id/tv_friendlist_lineone"
    		android:layout_width="match_parent"
    		android:layout_height="2dp"
    		android:layout_marginTop="5dp"
    		android:layout_below="@+id/tv_friendlist_myicon"
    	  	android:background="@drawable/homepage_line"  />
    
  
</RelativeLayout>
