<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/listview_share_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/good" />

    <TextView
        android:id="@+id/listview_share_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/listview_share_avatar"
        android:text="@string/username"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/listview_share_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/listview_share_username"
        android:layout_below="@+id/listview_share_avatar"
        android:layout_marginTop="43dp"
        android:text="@string/time"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/listview_share_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/listview_share_username"
        android:layout_below="@+id/listview_share_avatar"
        android:text="@string/sharecontent"
        android:textColor="@color/black"
        android:textSize="15dp" />

</RelativeLayout>