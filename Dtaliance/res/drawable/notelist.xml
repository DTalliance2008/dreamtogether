<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/note_listview"      
    >
<RelativeLayout 
    android:id="@+id/diarylist_background"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="5dp"
    android:background="@drawable/diarylist_background">   
    
    <TextView
        android:id="@+id/tv_notelist_icon1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/diarylist_moodicon_good"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/tv_notelist_time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:typeface="monospace"        
        android:text="11:11" />
     <TextView
        android:id="@+id/tv_notelist_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_notelist_icon1"
        android:layout_toLeftOf="@id/tv_notelist_time1"
        android:typeface="monospace"
        android:gravity="center"
        android:textSize="18sp"
        android:text="世界，你好" />
      <TextView
        android:id="@+id/tv_notelist_note1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_notelist_icon1"
        android:layout_below="@id/tv_notelist_title1"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#999999"
        android:text="就算你变了墨阳，就算我不在你身旁，你依然是我最爱的姑娘"  />
    
    
</RelativeLayout>
  
  
</RelativeLayout>



