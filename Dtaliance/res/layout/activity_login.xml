<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/et_login"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background1" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_layout_sign"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingBottom="20dp" >

        <EditText
            android:id="@+id/et_login_username"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/login_background_tv"
            android:gravity="center"
            android:hint="请输入用户名"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_login_passwd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/et_login_username"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_background_tv"
            android:gravity="center"
            android:hint="输入您的密码"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/ck_login_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_login_passwd"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="记住密码"
            android:textColor="#44ffff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_layout_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:paddingBottom="40dp" >

        <Button
            android:id="@+id/bt_login_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/bt_login_regist"
            android:background="@drawable/login_background_bt"
            android:text="登录"
            android:textColor="#44ffff" />

        <Button
            android:id="@+id/bt_login_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@drawable/login_background_bt"
            android:text="注册"
            android:textColor="#44ffff" />
    </LinearLayout>

</RelativeLayout>